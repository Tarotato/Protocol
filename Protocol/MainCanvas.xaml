<Page
	x:Class="Protocol.MainCanvas"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Protocol"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
	mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition x:Name="leftPanel" Width="0"/>
			<ColumnDefinition/>
			<ColumnDefinition x:Name="rightPanel" Width="0"/>
		</Grid.ColumnDefinitions>

		<Grid Grid.Row="0" Grid.Column="0" Background="LightGray"/>
		<Grid Grid.Row="0" Grid.Column="1">
			<canvas:CanvasControl x:Name="drawingCanvas" Draw="DrawCanvas"/>
			<InkCanvas x:Name="inkCanvas"/>
		</Grid>
		<Grid Grid.Row="0" Grid.Column="2" Background="LightGray"/>
		
		<Grid Grid.ColumnSpan="3">
			<InkToolbar x:Name="inkToolbar"
				VerticalAlignment="Bottom"
				TargetInkCanvas="{x:Bind inkCanvas}" 
				HorizontalAlignment="Center">

				<InkToolbarCustomToolButton 
					x:Name="addShapeToolButton" 
					Click="AddShapeToolButton_Click" 
					ToolTipService.ToolTip="Add Shape Tool">
					<SymbolIcon Symbol="{x:Bind ShapeIcon}"/>
				</InkToolbarCustomToolButton>

				<InkToolbarCustomToggleButton 
                    x:Name="toggleTouchButton" 
                    Click="ToggleTouch_Click" 
                    ToolTipService.ToolTip="Toggle Touch">
					<SymbolIcon Symbol="{x:Bind TouchWritingIcon}"/>
				</InkToolbarCustomToggleButton>
			</InkToolbar>

			<StackPanel
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

				<Button
                    x:Name="exportButton" 
				    Click="ExportButton_Click" 
                    MinHeight="49"
                    MinWidth="49"
                    Background="WhiteSmoke"
				    ToolTipService.ToolTip="Export">
					<SymbolIcon Symbol="{x:Bind ExportIcon}"/>
				</Button>

				<Button
                   x:Name="saveButton" 
				    Click="SaveButton_Click"
                    MinHeight="49"
                    MinWidth="49"                    
                    Background="WhiteSmoke"
				    ToolTipService.ToolTip="Save Project">
					<SymbolIcon Symbol="{x:Bind SaveIcon}"/>
				</Button>
			</StackPanel>
		</Grid>
    </Grid>
</Page>
